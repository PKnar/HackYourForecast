    <script>
        var mymap = L.map('mapid').setView([51.505, -0.09], 13);
        L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibGVvbmlkYXMwMDAwIiwiYSI6ImNqbjJja2JqZjI1MGczcXF2eWF3YXB1bWwifQ.-FRhZ4uSDN9TnhzwvQ7cgw', {
